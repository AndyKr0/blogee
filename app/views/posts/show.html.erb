<div class="row">
  <div class="col-md-12">
    <div id="title">
      <h1><%= @post.title %></h1>
    </div>
    
    <div id="author">
      <p>Created by <%= @post.user.email %> - <%= @post.user.name.capitalize %></p>
      <p><%= @post.created_at.to_s(:short) %></p>
      </div>
    
      <% if @post.asset.present? %>
        <h3> Attached File </h3>
        <div id="asset">
          <p>
            <%= link_to File.basename(@post.asset.path), @post.asset.url %>
          </p>
        </div>
        <% end %>


    <div id="content">
      <p><%= @post.content %></p>
    </div>
    
    <div id="controls">
    <%= link_to "Edit Post", edit_post_path(@post) %>
    <%= link_to "Delete Post", @post, method: :delete %>
    <%= link_to "Add Comment", new_post_comment_path(@post) %>
    </div>
    
     <div id="comments">
     <ul>
       <% @post.comments.each do |comment| %>
       <li>
         <%= link_to comment.content, [@post, comment] %> 
         - <%= link_to comment.author, [@post, comment] %>
       </li>
      <% end %>
     </ul>
    </div>
    
    </div>
</div>