<h2 id="title"><%= @post.title %></h2>
<div id="content"><%= @post.content %></div>
<div id="author"><%= @post.author %></div>

<%= link_to "Edit Post", edit_post_path(@post) %>
<%= link_to "Delete Post", 
      post_path(@post), 
      method: :delete, 
      data: { confirm: "Are you sure you want to delete this post?" }  %>