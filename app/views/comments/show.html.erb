<div class="row">
  <div class="col-md-12">
      
    <div id="comment">
      <p><%= @comment.content %></p>
    </div>
    <div id="author">
      <p>By: <%= @comment.author %></p>
      <p><%= @comment.created_at.to_s(:short) %></p>
    </div>
    <div>
    <%= link_to "Edit Comment", [:edit, @post, @comment] %>
      <%= link_to "Delete Comment", [@post, @comment], method: :delete, data:{ confirm: "Are you sure you want to delete this comment?" } %>
    </div>
</div>
