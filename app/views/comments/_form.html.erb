<%= form_for [@post, @comment] do |f| %>
 
<div class="form-group">
  <%= f.label :content %>
  <%= f.text_area :content, rows: 10, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :author %>
  <%= f.text_field :author, class: "form-control" %>
</div>
<%= f.submit "Save", class: "btn btn-default" %>
<% end %>